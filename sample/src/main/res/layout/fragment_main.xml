<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Outline"
            android:id="@+id/button"
            app:glyph="file_o" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:id="@+id/button2"
            app:glyph="image" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exclamation Triangle"
            android:id="@+id/button3"
            app:glyph="exclamation_triangle" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder"
            android:id="@+id/button4"
            app:glyph="folder" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder Open"
            android:id="@+id/button5"
            app:glyph="folder_open" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:id="@+id/button6"
            app:glyph="file" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Text"
            android:id="@+id/button7"
            app:glyph="file_text" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Image Outline"
            android:id="@+id/button8"
            app:glyph="file_image_o" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Archive Outline"
            android:id="@+id/button9"
            app:glyph="file_archive_o" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Audio Outline"
            android:id="@+id/button10"
            app:glyph="file_audio_o" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Movie Outline"
            android:id="@+id/button11"
            app:glyph="file_movie_o" />

        <com.radicalninja.fontglyph.GlyphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Code Outline"
            android:id="@+id/button12"
            app:glyph="file_code_o" />

    </LinearLayout>

</ScrollView>
